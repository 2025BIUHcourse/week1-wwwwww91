<launch>
    <node name="roscore" pkg="roscore" type="roscore" />

    <group ns="turtle1">

        <node name="sim" pkg="turtlesim" type="turtlesim_node" output="screen" />
        <node name="teleop" pkg="turtlesim" type="turtle_teleop_key" output="screen" />
    </group>

 
    <group ns="turtle2">

        <node name="sim" pkg="turtlesim" type="turtlesim_node" output="screen">
            <param name="background_r" value="255" />  <!-- 区分窗口颜色：白色背景 -->
            <param name="background_g" value="255" />
            <param name="background_b" value="255" />
        </node>

        <node name="teleop" pkg="turtlesim" type="turtle_teleop_key" output="screen" />
    </group>


    <group ns="turtle3">
        <node name="sim" pkg="turtlesim" type="turtlesim_node" output="screen">
            <param name="background_r" value="0" />    
            <param name="background_g" value="0" />
            <param name="background_b" value="0" />
        </node>
    </group>
</launch>

